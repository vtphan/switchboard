{
  "name": "@switchboard/sdk",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript SDK for Switchboard real-time educational messaging system",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "dev": "npm run build:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "switchboard",
    "education",
    "real-time",
    "websocket",
    "messaging",
    "classroom",
    "sdk",
    "typescript"
  ],
  "author": "Switchboard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/switchboard/javascript-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/switchboard/javascript-sdk/issues"
  },
  "homepage": "https://github.com/switchboard/javascript-sdk#readme",
  "dependencies": {
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "rollup": "^3.21.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}